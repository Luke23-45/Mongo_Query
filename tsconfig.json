{
  "compilerOptions": {
    "target": "ES2020",                     
    "module": "ES2020",                     
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["node"]
  },
  "include": ["./"],
  "exclude": ["node_modules"]
}